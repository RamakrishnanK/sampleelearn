<div class="row">
<div class="span6 offset3">
<%= form_for(@course) do |f| %>
Category:<%= render "shared/errormsg", object: f.object %>
<% categories_array = Category.all.map { |category| [category.category_name, category.id] } %>
<%= select_tag(:id,options_for_select(categories_array))%><br/>
<%= f.label :coursename %>
<%= f.text_field :coursename %><br/>
<%= f.label :coursetutor %>
<%= f.text_field :coursetutor %><br/>
<%= f.label :coursedescription %>
<%= f.text_area :coursedescription %><br/>
<%= f.label :courseimage %>
<%= f.file_field :courseimage %><br/>
<%= f.label :topics %>
<%= f.text_field :topics %><br/> 
<%= f.submit "Course Update", class: "btn btn-primary" %>
<% end %>


